<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
		integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
	<link rel="stylesheet" href="/stylesheets/home.css">
	<link rel="stylesheet" href="/stylesheets/konva.css">
	<link rel="stylesheet" href="/stylesheets/colstuff.css">
	<title>Visual Learner!</title>
</head>

<body>

	<%- include ./partials/header -%>

	<%# Main Content %>
	<div class="row m-0" id="maincontent">

		<!-- Code -->
		<div class="col-md-4 p-0" id="code">
			<div class="card-header bg-light rounded-0 colheader">
				<h2 class="colhead">
					Code
				</h2>
				<div class="holder-thing">
					<input type="range" min="1" max="100" value="100" class="slider">

					<button type="button" class="btn btn-outline-dark btn-light addRowBtn1" data-toggle="tooltip"
						data-placement="bottom" title="Add Row">+</button>
				</div>
			</div>
			<ul class="list-group textcol" id="codeDiv">
				<%for(i=0;i<=8;i++){%>
				<li class="list-group-item p-0" onfocusin="rowfocus(this)">
					<div class="row-box"></div>
					<div class="form-control invisibile-texty codetexty" contenteditable="true"></div>
					<div class="rowboxdel">
						<button type="button" class="btn btn-sm btn-outline-light btn-dark" onclick="delrowbox(this)">
							<i class="fa fa-trash-alt"></i>
						</button>
					</div>
				</li>
				<% } %>
			</ul>
		</div>

		<!-- Flowchart -->
		<div class="col-md-4 p-0" id="flowchart">
			<div class="card-header bg-light rounded-0 colheader">
				<h2 class="colhead">
					Flowchart
				</h2>
				<button class="rrectangle" data-toggle="tooltip" data-placement="bottom" title="Terminal"></button>
				<button class="rectangle" data-toggle="tooltip" data-placement="bottom" title="Process"></button>
				<button class="parallelogram" data-toggle="tooltip" data-placement="bottom" title="I/O"></button>
				<button class="dici" data-toggle="tooltip" data-placement="bottom" title="Decision"></button>
				<button class="circle" data-toggle="tooltip" data-placement="bottom" title="Connector"></button>

				<div class="holder-thing">
					<button type="button" class="btn btn-outline-dark btn-light" onclick="clBoard()"
						data-toggle="tooltip" data-placement="bottom" title="Clear Flowchart">
						<i class="fa fa-trash-alt"></i></button>
					<button type="button" class="btn btn-outline-dark btn-light addRowBtn" data-toggle="tooltip"
						data-placement="bottom" title="Add Row" onclick="addstageheight()">+</button>
				</div>

			</div>
			<div id="flowchartdiv" class="textcol">
			</div>
		</div>

		<!-- Psuedocode -->
		<div class="col-md-4 p-0" id="psuedo">
			<div class="card-header bg-light rounded-0 colheader">
				<h2 class="colhead">
					Psuedocode
				</h2>
				<div class="holder-thing">
					<input type="range" min="1" max="100" value="100" class="slider">

					<button type="button" class="btn btn-outline-dark btn-light addRowBtn2" data-toggle="tooltip"
						data-placement="bottom" title="Add Row">+</button>
				</div>
			</div>

			<ul class="list-group textcol" id="psuedoDiv">
				<%for(i=0;i<=8;i++){%>
				<li class="list-group-item p-0" onfocusin="rowfocus(this)">
					<div class="row-box"></div>
					<div class="form-control invisibile-texty psuedotexty" contenteditable="true"></div>
					<div class="rowboxdel">
						<button type="button" class="btn btn-sm btn-outline-light btn-dark" onclick="delrowbox(this)">
							<i class="fa fa-trash-alt"></i>
						</button>
					</div>
				</li>
				<% } %>
			</ul>
		</div>

	</div>

	<%# Bottom Nav %>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-bottom" id="botnav">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
			<span class="navbar-toggler-icon"></span>
		</button>
		<button type="button" class="btn btn-outline-light" data-toggle="collapse" data-target=".sidebar"
			id="topicsbutton">
			<i class="fa fa-bars fa-lg"></i>
		</button>

		<div class="collapse navbar-collapse d-flex justify-content-between">
			<span id="subTopicName" class="text-light ml-2">Topic Name Here</span>
			<div class="navbar-nav d-flex justify-content-center ">
				<button type="button" class="btn btn-outline-light" id="prv" disabled="true">Previous</button>

				<span class="nav-link" id="shpN">0/0</span>

				<button type="button" class="btn btn-outline-light" id="nxt" disabled="true">Next</button>
			</div>
			<div>
				<button type="button" id="viewmode" class="btn btn-outline-light">View Mode</button>
				<button type="button" class="btn btn-outline-light" onclick="saveSwal()">Save</button>
			</div>
		</div>
	</nav>

	<%# Topic list Menu%>
	<aside class="col-1 col-sm-2 p-0 bg-dark collapse sidebar fade fixed-top h-100" id="TopicsSidebar">
		<nav class="navbar navbar-toggleable-xl navbar-dark bg-dark flex-column align-items-start">
			<div class="collapse navbar-collapse sidebar">
				<ul class="flex-column navbar-nav sidebarlist" id="mytopicslist">
					<li class="nav-item">
						<button type="button" class="btn btn-outline-light" id="newTopicbtn">New Topic</button>
					</li>
					<%	if(currentUser){currentUser.topics.forEach(function(topic){  %>
					<li class="nav-item parent" id="<%=topic._id%>">
						<a class="nav-link" role="button">
							<%= topic.title %>
							<% if(topic.subtopics.length > 0) { %>
							<i class="fa fa-caret-down"></i>
							<% } %>
						</a>
						<button type="button" class="btn btn-outline-light" onclick="deletetopic(this)">
							<i class="fa fa-trash-alt text-danger"></i>
						</button>
						<ul class="flex-column navbar-nav sub-topic child sidebarlist subtopicslist">
							<%topic.subtopics.forEach(function(subtopic){ %>
							<li id="<%=subtopic._id%>">
								<a onclick="loadBoard(this)" class="nav-link" role="button">
									&thinsp;<%= subtopic.name %>
								</a>
								<button type="button" class="btn btn-sm btn-outline-light" onclick="deletesub(this)">
									<i class="fa fa-trash-alt text-warning"></i>
								</button>
							</li>
							<%	}); %>
						</ul>
					</li>
					<%	});} %>
				</ul>
			</div>
		</nav>
	</aside>
	
	<div id="menu">
		<button type="button" class="btn btn-outline-dark" id="delete-button">Delete</button>
		<button type="button" class="btn btn-outline-dark" id="mvfrnt-button">To Front</button>
		<button type="button" class="btn btn-outline-dark" id="mvbck-button">To Back</button>
		<button type="button" class="btn btn-outline-dark" id="mvup-button">Move Up</button>
		<button type="button" class="btn btn-outline-dark" id="mvdwn-button">Move Down</button>
	</div>

</body>

<script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
	crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
	integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
	crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
	integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
	crossorigin="anonymous"></script>
<script src="https://unpkg.com/konva@4.0.14/konva.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<script type="text/javascript" src="/konvascript.js"></script>
<script type="text/javascript" src="/konvashapes.js"></script>
<script>
	$('.addRowBtn1').click(function () {
		$('#codeDiv').append(addtexty("codetexty"));

	});

	$('.addRowBtn2').click(function () {
		$('#psuedoDiv').append(addtexty("psuedotexty"));
	});

	function addstageheight() {
		StageHeight = StageHeight + ShapeHeight * 2;
		setstageheight();
	}
	function delrowbox(item) {
		$(item).parent().parent().remove();
	}
	function rowfocus(row) {
		currentRow = $(row).index();
		//console.log(currentRow);
	}
	$('.child').hide();
	$('.parent').click(function () {
		$(this).siblings('.parent').find('ul').slideUp();
		$(this).find('ul').slideToggle();
	});

	async function saveSwal() {
		let { value: formValues } = await Swal.fire({
			title: 'Save Subtopic',
			html:
				'<select class="swal2-select" id="swal-input1">' +
				" <%if(currentUser) {currentUser.topics.forEach(function (topic) {%>" +
				' <option value="<%=topic._id%>">' + "<%= topic.title %>" + '</option>' +
				"<%});}%>" +
				' </select>' +
				'<input id="swal-input2" class="swal2-input">',
			focusConfirm: false,
			preConfirm: () => {
				return [
					$( "#swal-input1" ).val(),
					$("#swal-input1 option:selected").text(),
					document.getElementById('swal-input2').value
				]
			}
		});
	console.log(formValues);
	saveBoard(formValues);
	}
	$('#newTopicbtn').click(function () {
		Swal.fire({
			title: 'Name ',
			input: 'text',
			showCancelButton: true,
			confirmButtonText: 'Add topic',
			showLoaderOnConfirm: true,
			allowOutsideClick: () => !Swal.isLoading(),
			inputValidator: (value) => {
				if (!value) {
					return 'You need to write something!'
				}
			},
			preConfirm: (result) => {
				return $.ajax({
					type: 'POST',
					url: '/newtopic',
					data: { topic: result.value }
				}).done(function (data) {
					if (data.error) {
						return data;
					}
					else {
						$('#mytopicslist').append(`<li class="nav-item parent" id="${data.topicid}">
						<a class="nav-link" role="button">
							${data.topictitle}
						</a>
						<button type="button" class="btn btn-outline-light" onclick="deletetopic(this)">
							<i class="fa fa-trash-alt text-danger"></i>
						</button>
						<ul class="flex-column navbar-nav sub-topic child sidebarlist subtopicslist">
						</ul>
					</li>`);
						return data;
					}
				});
			}
			,
		}).then(result => {
			console.log(result);
			if (result.value.error) {
				Swal.fire({
					title: `${result.value.error}`,
					icon: 'error',
					showConfirmButton: false,
					timer: 1000
				});
			}
			else {
				Swal.fire({
					title: 'Topic Added!',
					icon: 'success',
					showConfirmButton: false,
					timer: 1000
				});
			}
		});

	});

	$('.slider').change(function () {
		$(this).parent().parent().parent().find("ul").fadeTo(100, this.value / 100);
	});
</script>

</html>