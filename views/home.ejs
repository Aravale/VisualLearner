<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
		integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
	<link href='https://fonts.googleapis.com/css?family=Aldrich' rel='stylesheet'>
	<link rel="stylesheet" href="/stylesheets/home.css">
	<link rel="stylesheet" href="/stylesheets/konva.css">
	<link rel="stylesheet" href="/stylesheets/colstuff.css">
	<title>Visual Learner!</title>
</head>

<body>
	<%# Top Bar %>
	<nav class="navbar p-0 d-none d-lg-flex">
		<div class="col-lg-4 p-0">
			<div class="card-header bg-light rounded-0 colheader">
				<h2 class="colhead">
					Code
				</h2>
				<div class="holder-thing">
					<input type="range" min="1" max="100" value="100" class="slider">
				</div>
			</div>
		</div>
		<div class="col-lg-4 p-0">
			<div class="card-header bg-light rounded-0 colheader">
				<h2 class="colhead">
					Flowchart
				</h2>
				<button class="Terminal" data-toggle="tooltip" data-placement="bottom" title="Terminal"></button>
				<button class="Process" data-toggle="tooltip" data-placement="bottom" title="Process"></button>
				<button class="IO" data-toggle="tooltip" data-placement="bottom" title="I/O"></button>
				<button class="Decision" data-toggle="tooltip" data-placement="bottom" title="Decision"></button>
				<button class="Connector" data-toggle="tooltip" data-placement="bottom" title="Connector"></button>

				<div class="holder-thing">
					<button type="button" class="btn btn-outline-dark btn-light" onclick="clBoard()"
						data-toggle="tooltip" data-placement="bottom" title="Clear Flowchart">
						<i class="fa fa-trash-alt"></i></button>
				</div>

			</div>
		</div>
		<div class="col-lg-4 p-0">
			<div class="card-header bg-light rounded-0 colheader">
				<h2 class="colhead">
					Psuedocode
				</h2>
				<div class="holder-thing">
					<input type="range" min="1" max="100" value="100" class="slider">
				</div>
			</div>
		</div>
	</nav>

	<%# Main Content %>
	<div class="row m-0" id="maincontent">
		<!-- Code -->
		<div class="col-lg-4 p-0" id="code">
			<div class="card-header bg-light rounded-0 colheader d-md-block d-lg-none">
				<h2 class="colhead">
					Code
				</h2>
				<div class="holder-thing">
					<input type="range" min="1" max="100" value="100" class="slider">
				</div>
			</div>
			<ul class="list-group textcol" id="codeUL">
				<%for(i=0;i<=6;i++){%>
				<li class="list-group-item p-0">
					<div class="row-box"></div>
					<div class="invisibile-texty codetexty" contenteditable="true"></div>
					<!-- <div class="rowboxdel">
						<button type="button" class="btn btn-sm btn-outline-light btn-dark" onclick="delrowbox(this)">
							<i class="fa fa-trash-alt"></i>
						</button>
					</div> -->
				</li>
				<% } %>
			</ul>
		</div>

		<!-- Flowchart -->
		<div class="col-lg-4 p-0" id="flowchart">
			<div class="card-header bg-light rounded-0 colheader d-md-block d-lg-none">
				<h2 class="colhead">
					Flowchart
				</h2>
				<button class="Terminal t1" data-toggle="tooltip" data-placement="bottom" title="Terminal"></button>
				<button class="Process t2" data-toggle="tooltip" data-placement="bottom" title="Process"></button>
				<button class="IO t3" data-toggle="tooltip" data-placement="bottom" title="I/O"></button>
				<button class="Decision t4" data-toggle="tooltip" data-placement="bottom" title="Decision"></button>
				<button class="Connector t5" data-toggle="tooltip" data-placement="bottom" title="Connector"></button>

				<div class="holder-thing">
					<button type="button" class="btn btn-outline-dark btn-light" onclick="clBoard()"
						data-toggle="tooltip" data-placement="bottom" title="Clear Flowchart">
						<i class="fa fa-trash-alt"></i></button>
				</div>

			</div>
			<div id="flowchartdiv" class="textcol">
			</div>
		</div>

		<!-- Psuedocode -->
		<div class="col-lg-4 p-0" id="psuedo">
			<div class="card-header bg-light rounded-0 colheader d-md-block d-lg-none">
				<h2 class="colhead">
					Psuedocode
				</h2>
				<div class="holder-thing">
					<input type="range" min="1" max="100" value="100" class="slider">
				</div>
			</div>

			<ul class="list-group textcol" id="psuedoUL">
				<%for(i=0;i<=6;i++){%>
				<li class="list-group-item p-0">
					<div class="row-box"></div>
					<div class="invisibile-texty psuedotexty" contenteditable="true"></div>
					<div class="rowboxdel">
						<button type="button" class="btn btn-sm btn-outline-light btn-dark" onclick="delrowbox(this)">
							<i class="fa fa-trash-alt"></i>
						</button>
					</div>
				</li>
				<% } %>
			</ul>
		</div>

	</div>

	<%# Bottom Nav %>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-bottom" id="botnav">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
			<span class="navbar-toggler-icon"></span>
		</button>
		<button type="button" class="btn btn-outline-light" data-toggle="collapse" data-target="#mySidenav">
			<i class="fa fa-bars fa-lg"></i>
		</button>

		<div class="collapse navbar-collapse d-flex justify-content-between">

			<span id="subTopicName" class="text-light ml-2">Topic Name Here</span>
			<div class="navbar-nav d-flex justify-content-center ">
				<button type="button" class="btn btn-outline-light" id="prv" disabled="true">Previous</button>

				<span class="nav-link" id="shpN">0/0</span>

				<button type="button" class="btn btn-outline-light" id="nxt" disabled="true">Next</button>
			</div>
			<div>

				<button type="button" id="addRow" class="btn btn-outline-light">Add Row</button>
				<button type="button" id="viewmode" class="btn btn-outline-light">View Mode</button>
				<% if(currentUser){ %>
				<button type="button" class="btn btn-outline-light" id="Save">Save</button>
				<button type="button" class="btn btn-outline-light" id="Update">Update</button>
				<% } %>
			</div>
		</div>
	</nav>

	<%# Topic list Menu%>
	<div id="mySidenav" class="sidenav bg-secondary collapse">

		<div>
			<h2 class="text-light px-2 title-text">Visual Learner</h2>
		</div>

		<div id="topicInfo">
			<ul class="topiclist" id="topiclist">
				<%	if(currentUser){currentUser.topics.forEach(function(topic){  %>
				<li id="<%=topic._id%>">
					<span class="dir topiclisttext"><%= topic.title %></span>

					<button type="button" class="btn btn-sm btn-outline-light float-right" onclick="deletetopic(this)"
						style="margin-right: 11px;">
						<i class="fa fa-trash-alt text-dark"></i>
					</button>

					<ul class="subtopiclist">
						<%topic.subtopics.forEach(function(subtopic){ %>
						<li id="<%=subtopic._id%>">
							<span class="topiclisttext" onclick="loadSubtopic(this)"><%= subtopic.name %></span>
							<button type="button" class="btn btn-sm btn-outline-light float-right"
								onclick="deletesub(this)">
								<i class="fa fa-trash-alt text-light"></i>
							</button>
						</li>
						<%	}); %>
					</ul>
				</li>
				<hr style="margin-bottom: 10px; margin-top: 5px;">
				<%	});} %>
			</ul>
		</div>

		<div id="userInfo">
			<div class="row">
				<div class="col-md-12">
					<button type="button" onclick="newTopic()" class="btn btn-outline-light">New Topic</button>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">
					<img src="avatar.jpg" / height="60" width="60">
				</div>
				<div class="col-md-9">
					<% if(currentUser){ %>
					<%= currentUser.first_name %> <%= currentUser.last_name %>
					&nbsp;&nbsp;
					<br />
					<a class="text-link" href="/logout">Logout</a>
					<% } %>
				</div>
			</div>

		</div>

	</div>

	<div id="menu">
		<button type="button" class="btn btn-outline-dark" id="delete-button">Delete</button>
		<button type="button" class="btn btn-outline-dark" id="mvfrnt-button">To Front</button>
		<button type="button" class="btn btn-outline-dark" id="mvbck-button">To Back</button>
		<button type="button" class="btn btn-outline-dark" id="mvup-button">Move Up</button>
		<button type="button" class="btn btn-outline-dark" id="mvdwn-button">Move Down</button>
		<button type="button" class="btn btn-outline-dark" id="trArr-button">True Arrow</button>
		<button type="button" class="btn btn-outline-dark" id="flArr-button">False Arrow</button>
	</div>

</body>

<script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
	crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
	integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
	crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
	integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
	crossorigin="anonymous"></script>
<script src="https://unpkg.com/konva@4.0.14/konva.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

<script>

	$('.dir').click(function (e) {
		e.stopPropagation();
		$(this).parent().children("ul").slideToggle();
	});

	function setrowsIndex() {
		$(".codetexty").each(function (index, element) {
			$(this).siblings('.row-box').html("<span class='codeCounter'>" + index + "</span>");
		});
		console.log("hi setting rows")
		/* $(".psuedotexty").each(function (index, element) {
			$(this).siblings('.row-box').html("<span class='codeCounter'>" + index + "</span>");
		}); */
	}

	$('#addRow').click(function () {
		$('#codeUL').append(addtexty("codetexty"));
		$('#psuedoUL').append(addtexty("psuedotexty"));
		StageHeight = StageHeight + (blockSnapSize * 3);
		setstageheight();
		setrowsIndex();

	});

	function delrowbox(item) {
		let rowNumber=$(item).parent().parent().index();
		$("#codeUL li").eq(rowNumber).remove();
		$("#psuedoUL li").eq(rowNumber).remove();
		deletestagerow(rowNumber);
		setrowsIndex();
	}

	async function saveSwal() {
		let { value: formValues } = await Swal.fire({
			title: 'Save Subtopic',
			html:
				'<select class="swal2-select" id="swal-input1">' +
				" <%if(currentUser) {currentUser.topics.forEach(function (topic) {%>" +
				' <option value="<%=topic._id%>">' + "<%= topic.title %>" + '</option>' +
				"<%});}%>" +
				' </select>' +
				'<input id="swal-input2" class="swal2-input">',
			focusConfirm: false,
			preConfirm: () => {
				return [
					$("#swal-input1").val(),
					$("#swal-input1 option:selected").text(),
					document.getElementById('swal-input2').value
				]
			}
		});
		return formValues;
	}
	
	async function updateSwal() {
		console.log($("#"+topid+" .topiclisttext").html());
		console.log($("#"+subid+" .topiclisttext").html());
		let { value: formValues } = await Swal.fire({
			title: 'Update Subtopic',
			html:
				`<label>Topic</label><input id="swal-input1" value="${$("#"+topid+" .topiclisttext").html()}" class="swal2-input">
				<label>Subtopic</label><input id="swal-input2"  value="${$("#"+subid+" .topiclisttext").html()}" class="swal2-input">`,
			focusConfirm: false,
			preConfirm: () => {
				return [
					$("#swal-input1").val(),
					$("#swal-input2").val(),
				]
			}
		});
		return formValues;
	}

	$("#Save").click(async function(){
			saveSwal().then(function(vals){
				console.log("Saving: "+vals);
				console.log(saveBoard(vals));
				saveSubtopic(saveBoard(vals));
				});
	});
	
	$("#Update").click(async function(){
		if(topid && subid){updateSwal().then(function(vals){
				if(vals){console.log("Updating: "+vals);
				console.log(saveBoard(vals));
				updateSubtopic(saveBoard(vals));}
				});}
				else{	
					Swal.fire({
				title: 'Open a sub first!',
				icon: 'error',
				confirmButtonText: 'OK'
			});
				}
	});
	$('.slider').change(function () {
		$(this).parent().parent().parent().find("ul").fadeTo(100, this.value / 100);
	});

</script>
<script type="text/javascript" src="/konvascript.js"></script>
<script type="text/javascript" src="/konvashapes.js"></script>
<script type="text/javascript" src="/topics.js"></script>
<script type="text/javascript" src="/subtopics.js"></script>
</html>